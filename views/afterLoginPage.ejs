<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EduPath - Choose Your Path</title>
    <link href="https://fonts.googleapis.com/css2?family=Glacial+Indifference:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/afterLoginPage.css">
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1>Choose Your Path</h1>
            <!-- <p>Select your career path to get personalized guidance</p> -->
        </div>
        <div class="path-cards">
            <!-- Engineering Card -->
            <div class="path-card" data-path="engineering">
                <div class="card-icon">
                    <i class="fas fa-calculator"></i>
                </div>
                <h3>Engineering</h3>
            </div>

            <!-- Pharmacy Card -->
            <div class="path-card" data-path="pharmacy">
                <div class="card-icon">
                    <i class="fas fa-flask"></i>
                </div>
                <h3>Pharmacy</h3>
                <!-- <p>MHTCET PCB preparation for pharmacy aspirants</p> -->
            </div>

            <!-- BBA/BMS Card -->
            <div class="path-card" data-path="bba">
                <div class="card-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3>BBA/BMS</h3>
                <!-- <p>Preparation for business management courses</p> -->
            </div>

            <!-- BCA Card -->
            <div class="path-card" data-path="bca">
                <div class="card-icon">
                    <i class="fas fa-laptop-code"></i>
                </div>
                <h3>BCA</h3>
                <!-- <p>Preparation for computer applications courses</p> -->
            </div>

            <!-- NEET Card -->
            <div class="path-card" data-path="neet">
                <div class="card-icon">
                    <i class="fas fa-user-md"></i>
                </div>
                <h3>NEET</h3>
                <!-- <p>Preparation for medical entrance examination</p> -->
            </div>
        </div>
    </div>

    <script src="/js/afterLoginPage.js"></script>
</body>
</html>